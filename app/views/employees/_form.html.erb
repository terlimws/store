<%= form_for(@employee) do |f| %>
  <% if @employee.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@employee.errors.count, "error") %> prohibited this employee from being saved:</h2>

      <ul>
      <% @employee.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <fieldset>
    <legend><%= controller.action_name.capitalize %> Employee</legend>

    <div class="control-group">
      <%= f.label :first_name, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :first_name, :class => 'text_field' %>
      </div>
    </div>
    
    <div class="control-group">
      <%= f.label :last_name, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :last_name, :class => 'text_field' %>
      </div>
    </div>
  

    <div class="control-group">
      <%= f.label :ssn, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :ssn, :class => 'text_field' %>
      </div>
    </div>
  
  
    <div class="control-group">
      <%= f.label :date_of_birth, :class => 'control-label' %>
      <div class="controls">
        <%= f.date_select :date_of_birth, :class => 'date_select', :start_year => 1980, :end_year => (14.years.ago.year) %>
      </div>
    </div>
  
  
    <div class="control-group">
      <%= f.label :phone, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :phone, :class => 'text_field' %>
      </div>
    </div>
  
    <div class="control-group">
      <%= f.label :role, :class => 'control-label' %>
      <div class="controls">
        <%= f.select(:role, Employee::ROLES_LIST, :prompt => "Select role...") %>
      </div>
    </div>
  
    <div class="control-group">
      <%= f.label :active, :class => 'control-label' %>
      <div class="controls">
        <%= f.check_box :active, :class => 'check_box' %>
      </div>
    </div>
    
    <div class="form-actions">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to 'Cancel', jobs_path, :class => 'btn' %>
    </div>
    
<% end %>
