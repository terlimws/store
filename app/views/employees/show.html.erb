<h1>Employee Details:</h1>
<br>
<p>
	
  <table class="table table-bordered table-striped">
  <tr>
    <td width="200"><b>Name:</b></td>
    <td><%= @employee.name %></td>
  </tr>
  <tr>
    <td><b>SSN:</b></td>
    <td><%= @employee.ssn.insert(3,"-").insert(7,"-") %></td>
  </tr>
  <tr>
    <td><b>Date of Birth:</b></td>
    <td><%= @employee.date_of_birth.strftime('%d %b %Y') %></td>
  </tr>
  <tr>
    <td><b>Phone:</b></td>
    <td><%= @employee.phone.insert(0,"(").insert(4, ") ").insert(9,"-") %></td>
  </tr>
  <tr>
    <td><b>Role:</b></td>
    <td><%= @employee.role.capitalize %></td>
  </tr>	
  <tr>
    <td><b>Joined Date:</b></td>
    <td><%= @employee.created_at.strftime('%d %b %Y') %></td>
  </tr>
  <tr>
    <td><b>Status:</b></td>
    <td>  <% if @employee.active %><span class="label label-success">Active</span><% else %><span class="label label-warning">In-active</span><% end %></td>
  </tr>
</table>

<br>
<br>
</p>
  <h3>Assignment History:</h3>
</p>
<br>
  
<table class="table table-striped">
  <thead>
    <th>Store Name</th>
    <th>Start Date</th>
    <th>End Date</th>
    <th>Pay Level</th>
    <th>Actions</th>
  </thead>
  <tbody
  </tr>
<% @employee.assignments.each do |assignment| %>
  <tr>
    <td><%= link_to assignment.store.name, store_path(assignment.store) %></td>
    <td><%= assignment.start_date.strftime('%d %b %Y') %></td>
    <td><% if assignment.end_date != nil %><%= assignment.end_date.strftime('%d %b %Y') %><% else %> <span class="label">N.A.</span><% end %></td>
    <td><%= assignment.pay_level %></td>
    <td><%= link_to 'Edit', edit_assignment_path(assignment), :class => 'btn btn-mini'  %></td>
  </tr>
<% end %>
</tbody>
</table>
<br />
<p><%= link_to 'New Assignment', new_assignment_path, :class => 'btn btn-primary' %></p>
