<!DOCTYPE html>
<html>
<head>
  <title>Creamery2012</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
        <div id="wrapper">
		<!-- TITLE BAR -->
		<!-- NAV BAR -->
		<div class="navbar">
		  <div class="navbar-inner">
		    <div class="container">
		      <a class="btn btn-navbar" data-toggle="collapse" data-target=".collapse">
		        <span class="icon-bar"></span>
		        <span class="icon-bar"></span>
		        <span class="icon-bar"></span>
		      </a>
		      <div class="nav-collapse">
		        <ul class="nav">
                          <li><%= link_to "Shifts", shifts_path %></li>
		          <li><%= link_to "Employees", employees_path %></li>
                          <li><%= link_to "Assignments", assignments_path %></li>
                          <li><%= link_to "Stores", stores_path %></li>
                          <li><%= link_to "Jobs", jobs_path %></li>
                          <li><%= link_to "Users", users_path %></li>
                          <% if logged_in? %> 
                            <li><%= link_to 'Logout', logout_path %></li>
                          <% else %><li><%= link_to 'Login', login_path %></li>
                          <% end %>
		        </ul>
		      </div>

                      
		    </div>
		  </div>
		</div>
                
                


		<!-- MAIN CONTENT -->
		<div class="container">
			<!-- flash messages -->
			<% flash.each do |name, msg| %>
				<div class="alert alert-<%= name == :notice ? "success" : "error" %>">
					<a class="close" data-dismiss="alert">&times;</a>
					<%= msg %>
				</div>
	    <% end %>
			<div class="row">
				<!-- main content placed here -->
				<div class="span12">
					<%= yield %>
				</div>
			</div>
		</div>

		<!-- FOOTER -->
		<footer id="footer">
	    <div class="container" align='center'>
				<%= render :partial => "partials/footer" %>
	    </div>
	  </footer>
	</div>
</body>
</html>
