
<% if can? :manage, Store %>
<h1>Current Stores</h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Store</th>
      <th>Phone Number</th>
      <th>Staff Count</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @stores.each do |store| %>
      <tr>
        <td><%= link_to store.name, store_path(store) %></td>
        <td><%= store.phone.insert(3,"-").insert(7,"-") %></td>
        <td><%= Assignment.current.for_store(store.id).count %></td>
        <td>
          <%= link_to 'Edit', edit_store_path(store), :class => 'btn btn-mini' %>
          <%= link_to 'Destroy', store_path(store), :method => :delete, :confirm => 'Are you sure?', :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<!-- Add the pagination using will_paginate gem -->
<span class="smtext">
<%= will_paginate @stores, :previous_label => "&larr;&nbsp;Previous&nbsp;", :next_label => "&nbsp;Next&nbsp;&rarr;" %>
</span>
<br />

<%= link_to 'New Store', new_store_path, :class => 'btn btn-primary' %>

<% else
# Shows what Managers, Employees and Guests see
%>
  
<h1>Current Stores</h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Store Name</th>
      <th>Store Phone</th>
    </tr>
  </thead>
  <tbody>
    <% @stores.each do |store| %>
      <tr>
        <td><%= link_to store.name, store_path(store) %></td>
        <td><%= store.phone.insert(3,"-").insert(7,"-") %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<!-- Add the pagination using will_paginate gem -->
<span class="smtext">
<%= will_paginate @stores, :previous_label => "&larr;&nbsp;Previous&nbsp;", :next_label => "&nbsp;Next&nbsp;&rarr;" %>
</span>
<br />

<% end %>
<p><p>
  <b>Map: </b><br>
  <%= image_tag @stores.last.create_active_stores_map_link(zoom=12,width=400,height=400)
  %>

</p>