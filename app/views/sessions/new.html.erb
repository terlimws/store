<h3>Log In</h3>

<%= form_tag sessions_path do %>

	<div class="control-group">
    <%= label_tag :email %>
    <div class="controls">
      <%= text_field_tag :email, params[:email] %>
    </div>
  </div>

	<div class="control-group">
    <%= label_tag :password %>
    <div class="controls">
      <%= password_field_tag :password %>
    </div>
  </div>
	<p><%= link_to "Forgot Password?", new_password_reset_path %></p>

  <div class="actions"><%= submit_tag "Log In" %></div>
<% end %>