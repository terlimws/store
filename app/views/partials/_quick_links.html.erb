


<% if logged_in? and (current_user.employee.role == 'admin' or current_user.employee.role == 'manager') %>
<div class="well">
	<h2>Control Panel</h2>
		        <ul class="nav">
		          <li><%= link_to (raw("<i class=\"icon-user\"></i> Employees")), employees_path %></li>
                          <% if can? :manage, Assignment %> <li><%= link_to (raw("<i class=\"icon-calendar\"></i> Assignment")), assignments_path %></li><% end %>
                          <% if can? :manage, Store %><li><%= link_to (raw("<i class=\"icon-home\"></i> Stores")), stores_path %></li><% end %>
                          <% if can? :manage, Job %><li><%= link_to (raw("<i class=\"icon-pencil\"></i> Jobs")), jobs_path %></li><% end %>
			  <% if can? :manage, Shift %><li><%= link_to (raw("<i class=\"icon-time\"></i> Shifts")), shifts_path %></li><% end %>
                          <% if can? :manage, User %><li><%= link_to (raw("<i class=\"icon-user\"></i> Users")), users_path %></li><% end %>
		        </ul>

</div>



Find Employee:
			<%= form_tag(search_path) do %>
				<%= text_field_tag('query', '', :size => 12) %>
				<%= submit_tag('Find') %>
			<% end %>

<% else %>


<div class="well">
	<h2>Quick Links</h2>
		        <ul class="nav">
		<%= link_to image_tag("Follow-us-Twitter-icon.jpg", :alt => "rss feed"), "https://twitter.com/#!/terlimws" %>
		<%= link_to image_tag("facebook.png", :alt => "rss feed"), "http://www.facebook.com/islandcreamery" %>
		        </ul>
</div>

<% end %>