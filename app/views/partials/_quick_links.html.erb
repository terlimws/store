


<% if logged_in? and (current_user.employee.role == 'admin' or current_user.employee.role == 'manager') %>
<div class="well">
	<h2>Control Panel</h2>
		        <ul class="nav nav-list">
			
					<% if current_user.employee.role?(:admin) %> <li class='nav-header'><%= link_to (raw("<i class=\"icon-th\"></i> Admin Dashboard")), home_path %></li>
					<% elsif current_user.employee.role?(:manager) %> <li class='nav-header'><%= link_to (raw("<i class=\"icon-th\"></i> Manager Dashboard")), home_path %></li>
						
						<% end %>
					
		          <li class='nav-header'><%= link_to (raw("<i class=\"icon-user\"></i> Employees")), employees_path %></li>
					<% if current_user.employee.role?(:admin) %> <li><%= link_to 'Add New Employee', new_employee_path %></li><% end %>
					<% if current_user.employee.role?(:admin) %> <li><%= link_to 'Inactive Employees', inactive_employees_path %></li><br><% end %>
					
					<% if can? :manage, Assignment %> 
					<li class='nav-header'><%= link_to (raw("<i class=\"icon-calendar\"></i> Assignment")), assignments_path %></li>
					<% if can? :create, Assignment %> <li><%= link_to 'Add New Assignment', new_assignment_path %></li><% end %>
					<% if can? :manage, Assignment %> <li><%= link_to 'Past Assignments', inactive_assignments_path %></li><% end %>
					<br><% end %>

                    <% if can? :manage, Store %>
					<li class='nav-header'><%= link_to (raw("<i class=\"icon-home\"></i> Stores")), stores_path %></li>
					<% if can? :create, Store %> <li><%= link_to 'Add New Store', new_store_path %></li><% end %>
					<% if can? :create, Store %> <li><%= link_to 'Inactive Stores', inactive_stores_path %></li><br><% end %>
					<% end %>

                    <% if can? :manage, Job %>
					<li class='nav-header'><%= link_to (raw("<i class=\"icon-pencil\"></i> Jobs")), jobs_path %></li>
					<% if can? :create, Job %> <li><%= link_to 'Add New Job', new_job_path %></li><% end %>
					<% if can? :create, Job %> <li><%= link_to 'Inactive Jobs', inactive_jobs_path %></li><br><% end %>
					<% end %>
					
			  		<% if can? :manage, Shift %>
					<li class='nav-header'><%= link_to (raw("<i class=\"icon-time\"></i> Shifts")), shifts_path %></li>
					<% if can? :create, Shift %> <li><%= link_to 'Add New Shift', new_shift_path %></li><% end %>
					<br><% end %>
                    
					<% if can? :manage, User %>
					<li class='nav-header'><%= link_to (raw("<i class=\"icon-user\"></i> Users")), users_path %></li>
					<% if can? :create, User %> <li><%= link_to 'Add New User', new_user_path %></li><% end %>
					<% end %>
		        </ul>

</div>
<% else %>


<div class="well">
	<h2>Follow Us</h2>
		        
	<center><%= link_to image_tag("twitter.png", :alt => "rss feed"), "https://twitter.com/#!/terlimws" %>
	<%= link_to image_tag("facebook.png", :alt => "rss feed"), "http://www.facebook.com/islandcreamery" %></center>
		      
</div>

<% end %>