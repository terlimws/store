<% unless current_user.employee.role?(:employee) %>
<h1>Shifts</h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Employee</th>
      <th>Store</th>
      <th>Date</th>
      <th>Start Time</th>
      <th>End Time</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @shifts.each do |shift| %>
      <tr>
        <td><%= shift.employee.name %></td>
        <td><%= link_to shift.store.name, store_path(shift.store) %></td>
        <td><%= shift.date.strftime('%d %b %Y') %></td>
        <td><%= shift.start_time.strftime('%I:%M %p') %></td>
        <td><%= shift.end_time.strftime('%I:%M %p') if shift.end_time != nil %></td>
        <td>
          <%= link_to 'Edit', edit_shift_path(shift), :class => 'btn btn-mini' %>
          <%= link_to 'Destroy', shift_path(shift), :method => :delete, :confirm => 'Are you sure?', :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<% if can? :create, Shift %>
<%= link_to 'Add New Shift', new_shift_path, :class => 'btn btn-primary' %>
<% end %>
<% end %>