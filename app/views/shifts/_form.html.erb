<%= form_for @shift, :html => { :class => 'form-horizontal' } do |f| %>
  <fieldset>
    <legend><%= controller.action_name.capitalize %> Shift</legend>

    <div class="control-group">
      <%= f.label :assignment_id, :class => 'control-label' %>
      <div class="controls">
        <%= f.number_field :assignment_id, :class => 'number_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :date, :class => 'control-label' %>
      <div class="controls">
        <%= f.date_select :date, :class => 'date_select' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :start_time, :class => 'control-label' %>
      <div class="controls">
        <%= f.time_select :start_time, :class => 'time_select' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :end_time, :class => 'control-label' %>
      <div class="controls">
        <%= f.time_select :end_time, :class => 'time_select' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :notes, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_area :notes, :class => 'text_area' %>
      </div>
    </div>

    <div class="form-actions">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to 'Cancel', shifts_path, :class => 'btn' %>
    </div>
  </fieldset>
<% end %>
