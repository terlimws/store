<%= form_for @shift, :html => { :class => 'form-horizontal' } do |f| %>

  <% if @shift.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@shift.errors.count, "error") %> prohibited this assignment from being saved:</h2>

      <ul>
      <% @shift.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <fieldset>
    <legend><%= controller.action_name.capitalize %> Shift</legend>

    <div class="control-group">
      <%= f.label :assignment_id, :class => 'control-label' %>
      <div class="controls">
        <%= f.collection_select :assignment_id, Assignment.current, :id, :name, :prompt => "Select ..." %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :date, :class => 'control-label' %>
      <div class="controls">
        <%= f.date_select :date, :class => 'date_select' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :start_time, :class => 'control-label' %>
      <div class="controls">
        <%= f.time_select :start_time, :class => 'time_select' %>
      </div>
    </div>

  
    <% if controller.action_name != 'new' %>
    <div class="control-group">
      <%= f.label :end_time, :class => 'control-label' %>
      <div class="controls">
        <%= f.time_select :end_time, :class => 'time_select', :minute_step => 15 %>
        <br>End time should be rounded up to the next 15-minute increment</br>
      </div>
    </div>
  
    <% end %>

    <div class="control-group">
      <%= f.label :notes, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_area :notes, :class => 'text_area' %>
      </div>
    </div>

    <div class="form-actions">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to 'Cancel', shifts_path, :class => 'btn' %>
    </div>
    
    
  </fieldset>
<% end %>
