<h4>Shifts today for your store</h4><p>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Employee</th>
      <th>Start Time</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    
    <% if @shifts.size == 0 %>
      
      <tr><td colspan="4">No Shifts For Today Found</td></tr>
    
    <% else %>
      
      <% @shifts.each do |shift| %>
        <tr>
          <td><%= link_to shift.assignment.employee.name, employee_path(shift.assignment.employee) %></td>
          <td><%=  shift.start_time.strftime('%I:%M %p') %></td>
          <td>
            <%= link_to 'Edit Shift', edit_shift_path(shift), :class => 'btn btn-mini' %>
          </td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br />




<h4>Incomplete Shifts</h4><p>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Employee</th>
      <th>Shift Date</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    
    <% if @incomplete_shifts.size == 0 %>
      <tr><td colspan="4">No Incomplete Shifts Found</td></tr>
    
    <% else %>
      
      <% @incomplete_shifts.each do |incomplete_shift| %>
        <tr>
          <td><%= link_to incomplete_shift.assignment.employee.name, employee_path(incomplete_shift.assignment.employee) %></td>
          <td><%=  incomplete_shift.date.strftime('%d %b %Y') %></td>
          <td>
            <%= link_to 'Edit Shift', edit_shift_path(incomplete_shift), :class => 'btn btn-mini' %> <%= link_to 'Delete', shift_path(incomplete_shift), :method => 'delete', :confirm => 'Are you sure you want to delete this shift?', :class => 'btn btn-mini btn btn-danger' %>
          </td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br />
