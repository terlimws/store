<%= form_for @assignment, :html => { :class => 'form-horizontal' } do |f| %>
  <fieldset>
    <legend><%= controller.action_name.capitalize %> Assignment</legend>

    <div class="control-group">
      <%= f.label :store_id, :class => 'control-label' %>
      <div class="controls">
        <%= f.number_field :store_id, :class => 'number_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :employee_id, :class => 'control-label' %>
      <div class="controls">
        <%= f.number_field :employee_id, :class => 'number_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :start_date, :class => 'control-label' %>
      <div class="controls">
        <%= f.date_select :start_date, :class => 'date_select' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :end_date, :class => 'control-label' %>
      <div class="controls">
        <%= f.date_select :end_date, :class => 'date_select' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :pay_level, :class => 'control-label' %>
      <div class="controls">
        <%= f.number_field :pay_level, :class => 'number_field' %>
      </div>
    </div>

    <div class="form-actions">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to 'Cancel', assignments_path, :class => 'btn' %>
    </div>
  </fieldset>
<% end %>
