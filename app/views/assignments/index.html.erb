<h1>Assignments</h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Employee</th>
      <th>Store</th>
      <th>Start Date</th>
      <th>End Date</th>
      <th>Pay Level</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @assignments.each do |assignment| %>
      <tr>
        <td><%= assignment.employee.name %></td>
        <td><%= assignment.store.name %></td>
        <td><%= assignment.start_date %></td>
        <td><%= assignment.end_date %></td>
        <td><%= assignment.pay_level %></td>
        <td>
          <%= link_to 'View', assignment_path(assignment), :class => 'btn btn-mini' %>
          <%= link_to 'Edit', edit_assignment_path(assignment), :class => 'btn btn-mini' %>
          <%= link_to 'Destroy', assignment_path(assignment), :method => :delete, :confirm => 'Are you sure?', :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New', new_assignment_path, :class => 'btn btn-primary' %>
